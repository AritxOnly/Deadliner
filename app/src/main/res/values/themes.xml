<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Deadliner" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorPrimaryContainer">?attr/colorPrimaryContainer</item>
        <item name="colorSurface">?attr/colorSurface</item>

        <item name="snackbarStyle">@style/Widget.Custom.Snackbar</item>
    </style>

    <item name="colorBorder" type="color">#50000000</item>
    <!-- Base application theme. -->
    <style name="Base.Theme.Deadliner" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Deadliner.AppWidgetContainerParent" parent="Theme.Material3Expressive.DynamicColors.DayNight">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Deadliner.AppWidgetContainer" parent="Theme.Deadliner.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>