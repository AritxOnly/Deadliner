<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    style="@style/Widget.Deadliner.AppWidget.Container"
    android:theme="@style/Theme.Material3Expressive.DynamicColors.DayNight"
    android:background="@drawable/app_widget_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <!-- Deadline Item 1 -->
        <FrameLayout
            android:id="@+id/ddl_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="4dp">

            <ProgressBar
                android:id="@+id/item_progress_1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:max="100"
                android:progressDrawable="@drawable/progress_deadline_item"
                android:layout_gravity="center_vertical"
                android:progressTint="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/star_icon_1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="星标"
                    android:visibility="gone"
                    android:src="@drawable/ic_star_filled"
                    app:tint="?android:attr/textColorPrimaryInverse"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/item_title_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/item_progress_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </FrameLayout>

        <!-- Deadline Item 2 -->
        <FrameLayout
            android:id="@+id/ddl_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="4dp">

            <ProgressBar
                android:id="@+id/item_progress_2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:max="100"
                android:progressDrawable="@drawable/progress_deadline_item"
                android:layout_gravity="center_vertical"
                android:progressTint="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/star_icon_2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="星标"
                    android:visibility="gone"
                    android:src="@drawable/ic_star_filled"
                    app:tint="?android:attr/textColorPrimaryInverse"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/item_title_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/item_progress_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </FrameLayout>

        <!-- Deadline Item 3 -->
        <FrameLayout
            android:id="@+id/ddl_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="4dp">

            <ProgressBar
                android:id="@+id/item_progress_3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:max="100"
                android:progressDrawable="@drawable/progress_deadline_item"
                android:layout_gravity="center_vertical"
                android:progressTint="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/star_icon_3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="星标"
                    android:visibility="gone"
                    android:src="@drawable/ic_star_filled"
                    app:tint="?android:attr/textColorPrimaryInverse"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/item_title_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/item_progress_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:id="@+id/widgetFinishNotice"
            android:visibility="gone">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_ccheck"
                android:contentDescription="完成图标"
                android:layout_marginBottom="16dp"
                android:id="@+id/widgetFinishIcon"
                app:tint="?android:attr/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finish_notice"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_add_ddl"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/widget_fab_bg"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_add"
        app:tint="@color/widget_container_fg" />

</RelativeLayout>